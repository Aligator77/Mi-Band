<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnected" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_status"
        android:layout_centerHorizontal="true"
        android:text="Connect" />

    <Button
        android:id="@+id/btn_lights"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_connect"
        android:layout_below="@+id/btn_connect"
        android:text="Lights"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_lights_2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_lights"
        android:layout_below="@+id/btn_lights"
        android:text="Cool Lights"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_notification"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_lights_2"
        android:layout_centerHorizontal="true"
        android:text="Test Notification"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_vibrate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_notification"
        android:layout_centerHorizontal="true"
        android:text="Vibrate"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_battery"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Battery Info"
        android:layout_below="@+id/btn_vibrate"
        android:layout_centerHorizontal="true"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_water"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Schedule water"
        android:layout_below="@+id/btn_battery"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_water_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancel water"
        android:layout_below="@+id/btn_water"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_apps"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="View apps"
        android:layout_below="@+id/btn_water_cancel"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
